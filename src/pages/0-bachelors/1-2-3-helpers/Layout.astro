---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/subject_ms-VGGI/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link
      href="https://unpkg.com/@primer/css@^16.0.0/dist/primer.css"
      rel="stylesheet"
    />
    <style>
      html,
      body {
        margin: 0;
        padding: 0;
        width: 100vw;
        height: 100vh;
      }

      #root {
        min-height: 100vh;
        display: grid;
        grid-template-columns: minmax(250px, 1fr) 6fr;
      }

      #left-pan {
        padding: 5px;
      }

      #content {
        display: grid;
        justify-items: center;
        align-items: center;
      }
    </style>
    <title>{title}</title>
  </head>
  <body>
    <div id="root">
      <div id="left-pan"></div>
      <div id="content"></div>
    </div>
  </body>
</html>
<style is:global>
  html {
    font-family: system-ui, sans-serif;
  }
  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }
  .btn-primary {
    background-color: var(--color-btn-primary-bg) !important;
  }
</style>
